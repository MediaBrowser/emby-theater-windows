                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsOnPageWithDisplayPreferences}" Value="False">
                                            <Setter Property="Visibility" Value="Collapsed" />
                                        </DataTrigger>
                                    </Style.Triggers>
